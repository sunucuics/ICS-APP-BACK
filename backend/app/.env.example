# =========================
# 🔐 FIREBASE
# =========================
# Hizmet hesabı kimliği JSON DOSYA YOLU (ör. ./secrets/firebase-service-account.json)
# Not: PROD'da genelde K8s secret ya da ortam değişkeniyle verilir.
FIREBASE_CRED_FILE=./secrets/firebase-service-account.json

# Firebase projenizin ID’si (console’da görürsünüz)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Storage bucket adı (genelde <project-id>.appspot.com)
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.appspot.com

# Web SDK için public API key (yalnız istemci tarafında da kullanılır)
FIREBASE_WEB_API_KEY=your-firebase-web-api-key


# =========================
# 💳 IYZICO (Ödeme)
# =========================
# Sandbox anahtarlarınızı Iyzipay panelinden alın.
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key

# Sandbox: https://sandbox-api.iyzipay.com
# Prod   : https://api.iyzipay.com
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com


# =========================
# 🚚 ARAS KARGO (Gönderi)
# =========================
# Ortam: TEST | SANDBOX | PROD | PRODUCTION | LIVE
ARAS_ENV=TEST

# Aras entegrasyon kullanıcı adı/şifre ve müşteri kodu
ARAS_USERNAME=your-aras-username
ARAS_PASSWORD=your-aras-password
ARAS_CUSTOMER_CODE=1234567

# HTTP çağrı timeout (saniye)
ARAS_TIMEOUT=30

# Otomasyonlar
# Sipariş oluşturulunca otomatik etiket üret (true/false)
AUTO_LABEL=false
# Otomatik kurye çağrısı (pickup) planla (true/false)
AUTO_PICKUP=false
# Pickup zaman aralığı (örn. 13:00-17:00)
PICKUP_TIME_WINDOW=13:00-17:00
# Pickup günü offset (0=bugün, 1=yarın...)
PICKUP_DAYS_OFFSET=0

# Etiket linkleri herkese açık mı? (signed URL yerine public)
LABEL_PUBLIC=false
# Etiket imzalı URL süresi (saat)
LABEL_URL_EXPIRES_HOURS=24

# Aras webhook’larını doğrulamak için paylaşılan gizli anahtar
ARAS_WEBHOOK_SECRET=replace_me


# =========================
# 🛠 UYGULAMA / DEBUG
# =========================
# true → ayrıntılı loglar ve hata mesajları
DEBUG=true

# Hesap silme taleplerinde kullanılan backdoor secret (ör. yönetim paneli işlevleri)
DELETE_ACCOUNT_SECRET=ali_app_ics


# =========================
# ✉️ SMTP (E-posta)
# =========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=teknikics@gmail.com
SMTP_PASSWORD=your-smtp-app-password
SMTP_FROM=teknikics@gmail.com
# STARTTLS kullanacaksanız true yapın; 465/SSL kullanıyorsanız false bırakın
SMTP_USE_STARTTLS=false


# =========================
# (OPSİYONEL) SUNUCU
# =========================
# Uvicorn/GAE/Cloud Run gibi ortamlarda gerekebilir
# APP_HOST=0.0.0.0
# APP_PORT=8080
# APP_ENV=development
